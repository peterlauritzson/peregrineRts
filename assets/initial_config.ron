// Initial/Static Configuration
// These values are loaded ONCE at startup and define fundamental game parameters.
// Changing these requires restarting the game or explicitly regenerating content.
// DO NOT modify these during gameplay as they affect determinism.

(
    // Simulation Core
    tick_rate: 30.0,
    unit_speed: 10.0,
    map_width: 2048.0,
    map_height: 2048.0,
    unit_radius: 0.5,

    // Collision Physics
    collision_push_strength: 1.0,
    collision_restitution: 0.5,
    collision_drag: 0.02,
    collision_iterations: 4,
    collision_search_radius_multiplier: 2.5,  // Reduced from 4.0 for better performance
    obstacle_search_range: 1,
    epsilon: 0.0001,
    obstacle_push_strength: 1.0,
    arrival_threshold: 0.01,

    // Movement & Forces
    max_force: 40.0,
    steering_force: 40.0,
    max_acceleration: 100.0,
    repulsion_force: 20.0,
    repulsion_decay: 2.0,
    friction: 0.98,
    min_velocity: 0.01,
    max_velocity: 50.0,
    braking_force: 5.0,
    touch_dist_multiplier: 2.1,
    check_dist_multiplier: 4.0,
    
    // Boids Behavior
    separation_weight: 1.5,
    alignment_weight: 1.0,
    cohesion_weight: 1.0,
    neighbor_radius: 5.0,
    separation_radius: 1.5,
    boids_max_neighbors: 8,

    // Force Sources
    black_hole_strength: 50.0,
    wind_spot_strength: -50.0,
    force_source_radius: 10.0,

    // Editor Defaults
    editor_num_obstacles: 50,
    editor_obstacle_min_radius: 10.0,
    editor_obstacle_max_radius: 50.0,
    editor_default_obstacle_radius: 20.0,
    editor_map_size_x: 2048.0,
    editor_map_size_y: 2048.0,
    
    // Pathfinding
    pathfinding_build_batch_size: 5,
    
    // Spatial Hash (Staggered Multi-Resolution)
    spatial_hash_entity_radii: [0.5, 10.0, 25.0],  // Expected entity sizes: units, medium obstacles, large obstacles
    spatial_hash_radius_to_cell_ratio: 10.0,        // cell_size = radius × ratio
    spatial_hash_max_entity_count: 100000,          // Max entities per grid (100k = ~80MB per grid, 3 size classes × 2 grids = ~480MB)
    
    // Spatial Hash Update Strategy (Performance Scaling)
    // For <1M entities: Full rebuild every frame is fast and simple
    // For >1M entities: Incremental updates using swap-based removal + arena over-provisioning
    spatial_hash_arena_overcapacity_ratio: 1.5,     // 1.5 = 50% extra arena space for incremental updates (e.g., 100k entities = 150k capacity)
                                                     // Higher = fewer rebuilds but more memory. Range: 1.2-2.0
                                                     // Only used if update_strategy is Incremental
    
    // Spatial Hash Parallel Updates (Performance)
    spatial_hash_parallel_updates: false,           // Enable parallel processing (5-10× speedup on multi-core)
    spatial_hash_regions_per_axis: 10,             // 10×10 = 100 regions for load balancing
)
